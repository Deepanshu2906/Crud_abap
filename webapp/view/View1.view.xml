<mvc:View controllerName="training1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    
        <Table id="_IDGenTable1" items="{/ZBTP_TEST_DATA}" mode="SingleSelect" selectionChange="getSelectItem">
           <columns>
           <Column id="_IDGenColumn1" >
             <Label id="_IDGenLabel1" text="Ebeln"></Label>
           </Column>
            <Column id="_IDGenColumn2" >
             <Label id="_IDGenLabel2" text="Waers"></Label>
           </Column>
            <Column id="_IDGenColumn3" >
             <Label id="_IDGenLabel3" text="Maktx"></Label>
           </Column>
            <Column id="_IDGenColumn4" >
             <Label id="_IDGenLabel4" text="Belnr"></Label>
           </Column>
            <Column id="_IDGenColumn5" >
             <Label id="_IDGenLabel5" text="Aedat"></Label>
           </Column>


           </columns>

           <ColumnListItem id="_IDGenColumnListItem1" >
           
           <cells>
           <Text id="_IDGenText1" text="{Ebeln}"></Text>
           <Text id="_IDGenTex2" text="{Waers}"></Text>
           <Text id="_IDGenText3" text="{Maktx}"></Text>
           <Text id="_IDGenText4" text="{Belnr}"></Text>
           <Text id="_IDGenText5" text="{Aedat}"></Text>


          
           </cells>
           </ColumnListItem>
        </Table>
        <Panel id="_IDGenPanel1" >
        <VBox id="_IDGenVBox1">
            <Label id="_IDGenLabel6" text="Enter Ebeln :" labelFor="idinput"></Label>
            <Input

                placeholder="Enter Ebeln"

                id="idinput"
                width="30%"

            />
            <Label id="_IDGenLabel7" text="Enter Waers :" labelFor="nameinput"></Label>
             
            <Input

                placeholder="Enter Waers"

                id="nameinput"
                 width="40%"

            /> 

            <Label id="_IDGenLabel8" text="Enter Maktx :" labelFor="deptinput"></Label>

            <Input

                placeholder="Enter Maktx"

                id="deptinput"
                width="45%"

            />
            <Label id="_IDGenLabel9" text="Select Date  and Time :" labelFor="id_date"></Label>
        
             <DateTimePicker 
                 id="id_date" 
                   width="50%"
        >
        
        </DateTimePicker>

            <HBox id="_IDGenHBox1" alignItems="Center" justifyContent="SpaceAround"   width="50%" height="80px">

                <Button

                    id="_IDGenButton11"

                    text="Create"

                    press="createData"
                    

                />

                <Button

                    id="_IDGenButton2"

                    text="Update"

                    press="updateData"
                    type="Attention"

                />

                <Button

                    id="_IDGenButton3"

                    text="Delete"

                    press="deleteData"
                    type="Negative"

                />

            </HBox>

        </VBox>
        </Panel>
    </Page>
</mvc:View>
