<mvc:View controllerName="training1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    
        <Table id="_IDGenTable1" items="{/ZBTP_TEST_DATA}" mode="SingleSelect" selectionChange="">
           <columns>
           <Column id="_IDGenColumn1" >
             <Label id="_IDGenLabel1" text="Ebeln"></Label>
           </Column>
            <Column id="_IDGenColumn2" >
             <Label id="_IDGenLabel2" text="Waers"></Label>
           </Column>
            <Column id="_IDGenColumn3" >
             <Label id="_IDGenLabel3" text="Maktx"></Label>
           </Column>
            <Column id="_IDGenColumn4" >
             <Label id="_IDGenLabel4" text="Aedat"></Label>
           </Column>
            <Column id="_IDGenColumn5" >
             <Label id="_IDGenLabel5" text="Belnr"></Label>
           </Column>


           </columns>

           <ColumnListItem id="_IDGenColumnListItem1" >
           
           <cells>
           <Text id="_IDGenText1" text="{Ebeln}"></Text>
           <Text id="_IDGenTex2" text="{Waers}"></Text>
           <Text id="_IDGenText3" text="{Maktx}"></Text>
           <Text id="_IDGenText4" text="{Belnr}"></Text>
           <Text id="_IDGenText5" text="{Aedat}"></Text>


          
           </cells>
           </ColumnListItem>
        </Table>
        <VBox id="_IDGenVBox1">

            <Input

                placeholder="Enter Ebeln"

                id="idinput"

            />

            <Input

                placeholder="Enter Waers"

                id="nameinput"

            />

            <Input

                placeholder="Enter Maktx"

                id="deptinput"

            />

            <VBox id="_IDGenHBox1" alignItems="Start" >

                <Button

                    id="_IDGenButton11"

                    text="Create"

                    press="createData"

                />

                <Button

                    id="_IDGenButton2"

                    text="Update"

                    press="updateData"

                />

                <Button

                    id="_IDGenButton3"

                    text="Delete"

                    press="deleteData"

                />

            </VBox>

        </VBox>
    </Page>
</mvc:View>
